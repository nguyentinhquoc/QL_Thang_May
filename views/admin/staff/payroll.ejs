<%- include('../../layout/header') %>
<div class="card p-4">
  <h4>Bảng công nhân viên</h4>
  <div
    class="tab-pane preview-tab-pane active"
    role="tabpanel"
    aria-labelledby="tab-dom-da4be276-f13c-47d6-be82-655bc6452fd5"
    id="dom-da4be276-f13c-47d6-be82-655bc6452fd5">
    <div
      id="tableExample3"
      data-list='{"valueNames":["name","phone","tongcv","hoanthanh","bolo","danglam","chitiet"],"page":20,"pagination":true}'>
      <div class="row justify-content-end g-0">
        <div class="col-auto col-sm-5 mb-3">
          <form>
            <div class="input-group">
              <input
                class="form-control form-control-sm shadow-none search"
                type="search"
                placeholder="Search..."
                aria-label="search" />
              <div class="input-group-text bg-transparent">
                <span class="fa fa-search fs-10 text-600"></span>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="table-responsive scrollbar">
        <table
          class="table table-bordered table-hover table-striped fs-10 mb-0">
          <thead class="bg-200">
            <tr>
              <th class="text-900 sort" data-sort="name">Họ tên</th>
              <th class="text-900 sort" data-sort="phone">Số điện thoại</th>
              <th class="text-900 sort" data-sort="tongcv">
                Tổng số công việc
              </th>
              <th class="text-900 sort" data-sort="hoanthanh">Hoàn thành</th>
              <th class="text-900 sort" data-sort="danglam">Đang làm</th>
              <th class="text-900 sort" data-sort="chitiet">Chi tiết</th>
            </tr>
          </thead>
          <tbody class="list">
            <% staffs.forEach(function(staff, key) { %>
            <tr>
              <td class="name"><%= staff.staff.full_name %></td>
              <td class="phone"><%= staff.staff.number_phone %></td>
              <td class="tongcv"><%= staff.totalTasks %></td>
              <td class="hoanthanh"><%= staff.completedTasks %></td>
              <td class="danglam"><%= staff.ongoingTasks %></td>
              <td class="chitiet">
                <a href="/staffs/payroll/<%=staff.staff.id%>">Chi tiết</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <button
          class="btn btn-sm btn-falcon-default me-1"
          type="button"
          title="Previous"
          data-list-pagination="prev">
          <span class="fas fa-chevron-left"></span>
        </button>
        <ul class="pagination mb-0"></ul>
        <button
          class="btn btn-sm btn-falcon-default ms-1"
          type="button"
          title="Next"
          data-list-pagination="next">
          <span class="fas fa-chevron-right"> </span>
        </button>
      </div>
    </div>
  </div>


</div>
<%- include('../../layout/footer') %>
