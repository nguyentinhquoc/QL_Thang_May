<%- include('../../layout/header') %>
<div class="card p-4">
  <h4>Thống kê nhân viên kinh doanh</h4>
  <div class="tab-pane preview-tab-pane active" role="tabpanel" aria-labelledby="tab-dom-da4be276-f13c-47d6-be82-655bc6452fd5" id="dom-da4be276-f13c-47d6-be82-655bc6452fd5">
    <div id="tableExample3" data-list='{"valueNames":["name","phone","email","hoanthanh","danglam","chitiet"],"page":20,"pagination":true}'></div>
      <div class="row justify-content-end g-0">
        <div class="col-auto col-sm-5 mb-3">
          <form>
            <div class="input-group">
              <input class="form-control form-control-sm shadow-none search" type="search" placeholder="Search..." aria-label="search" />
              <div class="input-group-text bg-transparent">
                <span class="fa fa-search fs-10 text-600"></span>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="table-responsive scrollbar">
        <table class="table table-bordered table-hover table-striped fs-10 mb-0">
          <thead class="bg-200">
            <tr>
              <th class="text-900 sort" data-sort="name">STT</th>
              <th class="text-900 sort" data-sort="name">Họ và tên</th>
              <th class="text-900 sort" data-sort="phone">Số điện thoại</th>
              <th class="text-900 sort" data-sort="email">Email</th>
              <th class="text-900 sort" data-sort="hoanthanh">Đã hoàn thành</th>
              <th class="text-900 sort" data-sort="danglam">Chỉ tiêu trong năm</th>
              <th class="text-900 sort" data-sort="chitiet">Chi tiết</th>
            </tr>
          </thead>
          <tbody class="list">
            <% staffsBusiness.forEach(function(staff, key) { %>
            <tr>
              <td class="name"><%= key+1 %></td>
              <td class="name"><%= staff.full_name %></td>
              <td class="phone"><%= staff.number_phone %></td>
              <td class="email"><%= staff.email %></td>
              <td class="hoanthanh"><%= staff.totalProjectStaff %></td>
              <td class="danglam"><%= staff.totalTarget %></td>
              <td class="chitiet">
                <a href="/project-staff/busines/<%=staff.id%>">Chi tiết</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-sm btn-falcon-default me-1" type="button" title="Previous" data-list-pagination="prev">
          <span class="fas fa-chevron-left"></span>
        </button>
        <ul class="pagination mb-0"></ul>
        <button class="btn btn-sm btn-falcon-default ms-1" type="button" title="Next" data-list-pagination="next">
          <span class="fas fa-chevron-right"> </span>
        </button>
      </div>
    </div>
  </div>
</div>
<%- include('../../layout/footer') %>