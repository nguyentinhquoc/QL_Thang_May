    <script>
  function removeMainStaff(projectStaff, element) {
    if (confirm("Bạn có chắc chắn muốn xóa nhân viên này?")) {
      $.ajax({
        url: `/project-staff/${projectStaff}`,
        type: 'DELETE',
        data: {},
