          <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
            <div class="modal-content position-relative">
              <div class="position-absolute top-0 end-0 mt-2 me-2 z-1">
                <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body p-0">
                <div class="rounded-top-3 py-3 ps-4 pe-6 bg-body-tertiary">
                  <h4 class="mb-1" id="modalExampleDemoLabel">Đề xuất thêm bảo trì</h4>
                </div>
                <div class="p-4 pb-0">
                  <form class="myForm2" method="post" action="/maintenance/add">
                    <div class="mb-3">
                      <label class="col-form-label" for="recipient-name2">Thông
                        tin:</label>
                      <input class="form-control recipient-name2" type="text" oninput="filterList2(event)" />
                      <ul class="itemList itemList2">
                        <% projects.forEach(function(project) { %>
                        <li class="btn w-100 infor-staff" onclick="clickProject2('<%= project.full_name %>- <%= project.number_phone %>','<%=project.id%>')">
                          <%= project.full_name %>- <%= project.number_phone %>
                        </li>
                        <% }) %>
                        <li class="btn w-100 infor-staff" onclick="clickProject2('!',0)">!
                          Không có công trình
                        </li>
                      </ul>
                    </div>
                    <div class="mb-3" id="recipient-nameProject2" style="display: none;">
                      <label class="col-form-label" for="recipient-name">Tên chủ dự
                        án:</label>
                      <input class="form-control" type="text" name="projectName" />
                    </div>
                    <div class="mb-3">
                      <label class="col-form-label" for="recipient-time2">Thời gian bảo
                        trì:</label>
                      <input class="form-control" id="recipient-time2" type="date" name="time" disabled />
                    </div>
                    <div class="mb-3">
                      <label class="col-form-label" for="message-reason2">Mô tả:</label>
